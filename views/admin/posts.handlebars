<style>


    /* Set a style for all buttons */
    button {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 20vh;
        opacity: 0.9;
    }

    button:hover {
        opacity:1;
    }

    /* Float cancel and delete buttons and add an equal width */
    .cancelbtn, .deletebtn {
        float: left;
        width: 50%;
    }

    /* Add a color to the cancel button */
    .cancelbtn {
        background-color: #ccc;
        color: black;
    }

    /* Add a color to the delete button */
    .deletebtn {
        background-color: #f44336;
    }

    /* Add padding and center-align text to the container */
    .container {
        padding: 16px;
        text-align: center;
    }

    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        right: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: #000000;
        padding-top: 50px;
    }

    /* Modal Content/Box */
    .modal-content {
        background-color: #000000;
        margin: 5% 10% 15% auto; /* 5% from the top, 15% from the bottom and centered */
        border: 1px solid #888;
        width: 50%; /* Could be more or less, depending on screen size */
    }

    /* Style the horizontal ruler */
    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    /* The Modal Close Button (x) */
    .close {
        position: absolute;
        right: 35px;
        top: 15px;
        font-size: 40px;
        font-weight: bold;
        color: #f1f1f1;
    }

    .close:hover,
    .close:focus {
        color: #f44336;
        cursor: pointer;
    }




    /* Change styles for cancel button and delete button on extra small screens */
    @media screen and (max-width: 300px) {
        .cancelbtn, .deletebtn {
            width: 100%;
        }
    }
</style>



<div id="colorlib-main">
    <section>
        <h3 style="text-align: center; color: #EC5007; text-decoration: underline">POSTS</h3>
        <div class="container">

            {{> admin-nav}}

            <div class="clearfix"></div>
            <div class="mb-5"></div>
            <div class="row">

                <div class="col-md-12">
                    <table class="table">
                        <thead>
                        <tr>
                            <th style="color: #0069d9">DELETE</th>
                            <th style="color: #ba8b00">TITLE</th>
                            <th style="color: peru">CATEGORY NAME</th>
                            <th style="color: #0069d9">EDIT</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each posts}}
                            <tr>

                                <td style="color: #EC0726">


                                        <button onclick="document.getElementById('id01').style.display='block'" type="submit" class="btn btn-danger">DELETE</button>
                                    <div  id="id01" class="modal">
                                        <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">Ã—</span>
                                        <form class="modal-content"  action="/admin/posts/{{_id}}?_method=DELETE" method="POST">


                                            <div class="container">
                                                <h1>Delete Account</h1>
                                                <p style="color: #f3c623">Are you sure you want to delete your posts?</p>

                                                <div class="clearfix">
                                                    <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" onclick="document.getElementById('id01').style.display='none'" class="deletebtn">Delete</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </td>
                                <td style="color: #EC0726">{{title}}</td>
                                <td style="color: #EC0726">{{kind}}</td>
                                <td style="color: #EC0726">
                                    <a class="btn btn-warning" href="/admin/posts/edit/{{_id}}">EDIT</a>
                                </td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </section>
</div>

<script>
    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>
