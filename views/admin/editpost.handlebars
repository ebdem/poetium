

<h3 class="mb-3  offset-6 pt-2">UPDATE POST</h3>
<form action="/admin/posts/{{post._id}}?_method=PUT" class="p-3 p-md-5 col-md-8 offset-3" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">TÜR</label>
                <select type="text" class="form-control" id="name" name="kind" required="true">
                    {{#each categories}}
                        <option style="color: #0b0b0b;text-transform: uppercase" value="{{name}}">{{name}}</option>
                    {{/each}}

                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Title</label>
                <input type="text" class="form-control" id="name" value="{{post.title}}" name="title" required="true">
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label for="message">Content</label>
                <textarea name="content" id="content" cols="20" rows="5" class="form-control" required="true">{{post.content}}</textarea>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Add İmage</label>
                <input type="file" class="form-control" id="name" name="post_image" required="true">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="message">Author Description</label>
                <textarea name="author_des" id="content" cols="20" rows="5" class="form-control" required="true"></textarea>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Author İmage</label>
                <input type="file" class="form-control" id="name" name="auth_image" required="true">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Update Post" class="btn py-3 px-4 btn-primary">
            </div>
        </div>

    </div>
</form>

